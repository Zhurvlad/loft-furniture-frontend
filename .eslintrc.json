{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint/eslint-plugin"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "warning",
      {
        "endOfLine": "auto"
      }
    ],
    "@typescript-eslint/no-unused-vars": "warning",
    "@typescript-eslint/no-explicit-any": "warning",
    "@typescript-eslint/quotes": [
      "warning",
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces": [2, { "skipBlankLines": false }],
    "no-multiple-empty-lines": ["warning", { "max": 1, "maxBOF": 1}],
    "object-curly-spacing": ["warning", "always"],
    "comma-spacing": [2, {"before": false, "after": true}],
    "arrow-spacing": ["warning", { "before": true, "after": true }],
    "space-infix-ops": ["warning", { "int32Hint": false }],
    "space-after-keywords": "off",
    "keyword-spacing": [2, {"before": true, "after": true}],
    "react/jsx-indent": [2, 2, {"indentLogicalExpressions": true}],
    "arrow-body-style": ["warning", "as-needed"],
    "padded-blocks": ["warning", "never"],
    "semi": ["warning", "never"],
    "max-len": ["warning", { "code": 120 }],
    "indent": ["warning", 2],
    "react/self-closing-comp": ["error", {
      "component": true,
      "html": true
    }],
    "react/jsx-tag-spacing": ["warning", { "beforeSelfClosing": "always" }]
  }
}
